class Solution {
    public boolean isPalindrome(String s) {
        if(s.length()==0)
        return true;
        int n=s.length()-1;
        int start=0;
        while(start<=n)
        {
            char sl=s.charAt(start);
            char el=s.charAt(n);
            if(!Character.isLetterOrDigit(sl))
            {start++;
            continue;}
            else if(!Character.isLetterOrDigit(el))
            {
                n--;
                continue;
            }
            else
            {
                if(Character.toLowerCase(sl)!=Character.toLowerCase(el))
                {
                    return false;
                }
                start++;
                n--;
            }
        }
        return true;
    }
}